<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WUG.Client.Forms.MainPage"
             Title="WUG Česká republika">
    <TabbedPage.Children>
        <ContentPage Title="Upcoming Events">
            <!--<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" IsHorizontalOptions="Center" VerticalOptions="Center" />-->
            <ListView ItemsSource="{Binding UpcomingEvents}" HasUnevenRows="True" ItemTapped="ListView_OnItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="65"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Frame Grid.Column="0">
                                        <Label Text="{Binding TakePlaceFromDay}" Font="Bold, Large" HorizontalTextAlignment="Center"/>
                                    </Frame>
                                    <StackLayout Padding="0" Grid.Column="1">
                                        <Label Text="{Binding Name}" Font="Bold, Medium"/>
                                        <Label Text="{Binding BranchName}" />
                                        <ActivityIndicator IsRunning="False"></ActivityIndicator>
                                    </StackLayout>
                                    
                                </Grid>
                                <!--<StackLayout Padding="0, 10, 0, 0"
                                             Orientation="Horizontal"
                                             Spacing="10">-->
                                   
                                <!--</StackLayout>-->
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </ContentPage>

        <ContentPage Title="Past Events">
            <!--<ListView ItemsSource="{Binding UpcomingEvents}">
                
            </ListView>-->
            <Label Text="Hello!" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />
        </ContentPage>

        <ContentPage Title="Current Events">
            <!--<ListView ItemsSource="{Binding UpcomingEvents}">
                
            </ListView>-->
            <Label Text="Ahoj!" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />
        </ContentPage>
    </TabbedPage.Children>
	

</TabbedPage>