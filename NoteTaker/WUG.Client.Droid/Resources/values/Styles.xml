<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="BaseAppTheme">
    <item name="android:textViewStyle">@style/LightStyle</item>
  </style>
  
  <style name="BaseRobotoStyle" parent="android:Widget.TextView"> </style>
  
  <style name="NormalStyle" parent="BaseRobotoStyle">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
  </style>
  
  <style name="GreyNormalStyle" parent="NormalStyle">
    <item name="android:textColor">#A0A0A0</item>
  </style>
  
  <style name="MediumNormalStyle" parent="NormalStyle">
    <item name="android:textSize">15dp</item>
  </style>
  
  <style name="LargeNormalStyle" parent="NormalStyle">
    <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
  </style>

  <style name="BlueMediumNormalStyle" parent="MediumNormalStyle">
    <item name="android:textColor">#3063AA</item>
  </style>
  
  <style name="LightStyle" parent="BaseRobotoStyle">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
  </style>
  
  <style name="MediumLightStyle" parent="LightStyle">
    <item name="android:textSize">15dp</item>
  </style>

  <style name="GreyLightStyle" parent="LightStyle">
    <item name="android:textColor">#686868</item>
  </style>

  <style name="GreyMediumLightStyle" parent="MediumLightStyle">
    <item name="android:textColor">#686868</item>
  </style>
  
  <style name="BlueMediumLightStyle" parent="MediumLightStyle">
    <item name="android:textColor">#3063AA</item>
  </style>

  <style name="BlueLargeLightStyle" parent="LargeLightStyle">
    <item name="android:textColor">#3063AA</item>
  </style>
  
  <style name="LargeLightStyle" parent="LightStyle">
    <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
  </style>
  
  <style name="BoldStyle" parent="NormalStyle">
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="MediumBoldStyle" parent="BoldStyle">
    <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
  </style>
  
  <style name="CondensedStyle" parent="BaseRobotoStyle">
    <item name="android:fontFamily">sans-serif-condensed</item>
  </style>
  
  <style name="MediumCondensedStyle" parent="CondensedStyle">
    <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
  </style>
  
  <style name="BoldCondensedStyle" parent="CondensedStyle">
    <item name="android:textStyle">bold</item>
  </style>
  
</resources>
